@model IEnumerable<MyShoppingCart.Models.ViewModels.Shop.CategoryVM>

<h3>Categories</h3>

<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item list-group-item-heading">
            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
            <a href="/shop/category/@item.Slug.ToLower()">@item.Name</a></li>
    }
</ul>

